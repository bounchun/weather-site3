---
layout: layouts/base.njk
pagination:
  data: cities.cities
  size: 1
  alias: city
permalink: /city/{{ city.slug }}/
eleventyComputed:
title: "{{ city.name }} Weather"
---

<h1 class="title is-2 has-text-centered">{{ city.name }}</h1>
<p class="subtitle is-4 has-text-centered">Today</p>

<div class="weather-layout mb-6">

  <!-- Icon -->
  <div>
    <img src="/assets/{{ city.icon }}"
         alt="{{ city.name }} weather"
         class="hero-weather">
  </div>

  <!-- Right now -->
  <div class="weather-box">
    <div class="box-title">Right Now</div>
    <div>{{ city.current.temp }}°C</div>
    <div>{{ city.current.wind }} km/h</div>
  </div>

  <!-- Max temp -->
  <div class="weather-box">
    <div class="box-title">Max Temp</div>
    <div>{{ city.max.temp }}°C</div>
  </div>

  <!-- Max wind -->
  <div class="weather-box">
    <div class="box-title">Max Wind</div>
    <div>{{ city.max.wind }} km/h</div>
  </div>

</div>

<h3 class="title is-4 mt-6 has-text-centered">7 Day Summary</h3>

<div class="columns is-mobile is-multiline is-centered mb-6">
  {% for day in city.forecast %}
    <div class="column is-one-seventh-fullhd is-1-tablet is-4-mobile">
      {% include "components/day-summary.njk" %}
    </div>
  {% endfor %}
</div>

<div class="has-text-centered">
  <a href="/dashboard/" class="button is-link is-medium">
    Back to Dashboard
  </a>
</div>
